<% set_meta_tags title: @roundrobin.name, og: { title: @roundrobin.name } %>

<%# トーナメント共通ヘッダ %>
<%= render "shared/roundrobin_header", { roundrobin: @roundrobin, current_page: "管理者" } %>

<div class="container-lg my-3">

  <div class="mb-5">
    <p>
      管理者の方はパスワードを入力してください。<br>
      設定変更や試合結果の更新が可能になります。
    </p>
  </div>


  <div class="border border-dark p-4">
  <%= turbo_frame_tag "form" do %>
    <%= form_with(url: authentication_roundrobin_path(@roundrobin), id: "password_form", data: { turbo_frame: "_top" }) do |form| %>
      <%# Error Message %>
      <% if @error_message %>
        <div class="alert alert-danger mb-4">
          <%= @error_message %>
        </div>
      <% end %>

      <%# パスワード %>
      <%= label_tag(:password, "管理者パスワード", class: "form-control-label text-dark text-nowrap") %>
      <div class="mb-1 d-flex justify-content-between align-items-center gap-2">

        <div class="">
          <%= text_field_tag(:password, "", class: "form-control") %>
        </div>
        <div class="">
          <%= form.submit('送信', class: "btn btn-secondary") %>
        </div>
      </div>

      <%# Submit %>

    <% end %>
  <% end %>
  </div>
</div>