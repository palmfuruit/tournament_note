<% set_meta_tags title: @roundrobin.name, og: { title: @roundrobin.name } %>

<%# リーグ共通ヘッダ %>
<%= render "shared/roundrobin_header", { roundrobin: @roundrobin, current_page: "順位表" } %>

<%# 参加チームなしの場合 %>
<% if @ranking.teams.count < 2 %>
  <div class="container-lg my-3">
    <div class="alert alert-warning">参加チームが2チーム以上必要です</div>
  </div>

<% else %>
  <div class="bg-white">
    <div class="container-lg my-3 py-3">
        <%= render partial: "ranking_table",
                   locals: { roundrobin: @roundrobin, ranking: @ranking } %>
    </div>
  </div>

<% end %>
