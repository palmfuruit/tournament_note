<table id="roundrobin-table" class="roundrobin-table table table-bordered text-center">
  <thead>
    <tr>
      <th class="no-game-cell"></th>
      <% teams.each do |team| %>
        <th>
          <%= team_uniform(team) %>
          <div><%= team_name(team) %></div>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% teams.each do |team| %>
      <%= roundrobin.decorate.tr_tag__team_record(teams:, games:, round:, current_team: team) %>
    <% end %>
  </tbody>
</table>