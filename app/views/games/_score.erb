<div class="d-flex flex-row justify-content-around gap-1">
  <div class="d-flex flex-column justify-content-between align-items-center w-50 p-2">
    <p class="lead fw-bold"><%= team_uniform(game.a_team) %> <%= team_name(game.a_team) %></p>
    <% if game.has_score_num? %>
      <div class="form-group">
        <%= form.number_field(:a_score_num, value: game.a_score_num, min: '0', max: '999', class: "form-control text-end") %>
      </div>
    <% end %>
  </div>

  <div class="align-self-center">
    <p class="lead text-danger">vs</p>
  </div>

  <div class="d-flex flex-column justify-content-between align-items-center w-50 p-2">
    <p class="lead fw-bold"><%= team_uniform(game.b_team) %> <%= team_name(game.b_team) %></p>
    <% if game.tournament.roundrobin? && game.tournament.roundrobin.has_score %>
      <div class="form-group">
        <%= form.number_field(:b_score_num, value: game.b_score_num, min: '0', max: '999', class: "form-control text-end") %>
      </div>
    <% end %>

  </div>

</div>