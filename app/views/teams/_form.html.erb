<%= turbo_frame_tag dom_id(@team, :form) do %>
  <%= form_with(model: [@elimination, @team], id: "team_form") do |form| %>
    <%# Error Message %>
    <%= form_error_notification(@team) %>

    <div>
      <%= "[#{@team.entryNo || 'New'}]" %>
    </div>

    <div class="mb-3">
      <%= form.label(:name, "チーム名", class: "form-control-label") %>
      <%= form.text_field(:name, class: "form-control form-control") %>
    </div>

    <div class="d-flex gap-1 justify-content-end">
      <div class="bg-white">
        <%= link_to elimination_teams_path(@elimination), class: "btn btn-outline-secondary", data: { turbo_frame: dom_id(@team), testid: "cancel" } do %>
          <i class="bi bi-x"></i>
        <% end %>
        <%= button_tag type: "submit", class: "btn btn-outline-main", data: { turbo_frame: "_top", testid: "ok" } do %>
          <i class="bi bi-check-lg"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
