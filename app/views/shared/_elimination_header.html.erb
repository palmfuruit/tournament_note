<div class="container-lg mt-3 mb-5">
  <div class="d-flex align-items-center gap-3">
    <h1 class="mb-3"><%= elimination.name %></h1>
    <p id="elimination-status" class="lead" data-testid="tournament-status"><%= span_tag__status(elimination) %></p>
  </div>
  <div class="btn-group">
    <% if tournament_owner?(elimination.tournament) %>
      <%= link_to "設定", edit_elimination_path(elimination), class: "btn btn-outline-dark #{'active' if current_page == '設定'}" %>
      <%= link_to "チーム", tournament_teams_path(elimination.tournament), class: "btn btn-outline-dark #{'active' if current_page == 'チーム'}" %>
    <% end %>
    <%= link_to "トーナメント表", elimination_path(elimination), class: "btn btn-outline-dark #{'active' if current_page == 'トーナメント表'}" %>
    <%= link_to "共有", share_elimination_path(elimination), class: "btn btn-outline-dark #{'active' if current_page == '共有'}" %>
    <% unless tournament_owner?(elimination.tournament) %>
      <%= link_to "更新", admin_elimination_path(elimination), class: "btn btn-outline-dark #{'active' if current_page == '更新'}" %>
    <% end %>
  </div>
</div>
